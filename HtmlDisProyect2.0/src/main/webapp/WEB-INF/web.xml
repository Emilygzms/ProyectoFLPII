<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddCart</servlet-name>
        <servlet-class>controlador.producto.AddCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCarrito</servlet-name>
        <servlet-class>controlador.carrito.ServletCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListCarrito</servlet-name>
        <servlet-class>controlador.carrito.ServletListCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBorrrar</servlet-name>
        <servlet-class>controlador.carrito.ServletBorrrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBorrar</servlet-name>
        <servlet-class>controlador.carrito.ServletBorrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>controlUsuario</servlet-name>
        <servlet-class>controlador.usuario.controlUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCart</servlet-name>
        <url-pattern>/agregarproducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCarrito</servlet-name>
        <url-pattern>/ServletCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListCarrito</servlet-name>
        <url-pattern>/ServletListCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBorrrar</servlet-name>
        <url-pattern>/ServletBorrrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBorrar</servlet-name>
        <url-pattern>/ServletBorrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controlUsuario</servlet-name>
        <url-pattern>/controlUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
